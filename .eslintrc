{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "standard",
  "plugins": [
    "svelte3"
  ],
  "globals": {
    "afterAll": true,
    "afterEach": true,
    "beforeAll": true,
    "beforeEach": true,
    "describe": true,
    "expect": true,
    "it": true,
    "cy": true,
    "Cypress": true
  },
  "rules": {
    "import/first": "off",
    "semi": [2, "always"],
    "comma-dangle": ["error", "always-multiline"]
  },
  "settings": {

  }
}
